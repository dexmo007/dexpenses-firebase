{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run test",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "storage": [
    {
      "target": "default",
      "rules": "storage.rules"
    },
    {
      "target": "public",
      "rules": "storage.public.rules"
    }
  ]
}
