{
  "name": "dexpenses-functions",
  "scripts": {
    "lint": "tslint --force --project tsconfig.json",
    "lint:sonar": "npm run lint -- -t json -o .sonar/tslint-report.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "mocha -r ts-node/register --require chai-autoload-plugins --recursive \"src/**/*.spec.ts\" \"test/**/*.spec.ts\"",
    "test:cov": "nyc npm run test",
    "test:single": "mocha -r ts-node/register --require chai-autoload-plugins",
    "test:extract": "mocha -r ts-node/register --require chai-autoload-plugins test/extract.offline.spec.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^2.4.2",
    "@google-cloud/vision": "^0.25.0",
    "@google/maps": "^0.5.5",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0",
    "luxon": "^1.11.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-datetime": "0.0.32",
    "@types/google__maps": "^0.5.2",
    "@types/luxon": "^1.11.1",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.9",
    "chai": "^4.2.0",
    "chai-autoload-plugins": "^0.1.0",
    "chai-datetime": "^1.5.0",
    "firebase-functions-test": "^0.1.6",
    "mocha": "^6.0.1",
    "nyc": "^13.3.0",
    "sinon": "^7.2.7",
    "sonarqube-scanner": "^2.4.0",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.3.4000"
  },
  "private": true,
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  }
}
