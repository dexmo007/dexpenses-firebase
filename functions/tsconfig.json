{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "es2017",
    "experimentalDecorators": true,
    "lib": ["esnext"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "test", "**/*.spec.ts"]
}
